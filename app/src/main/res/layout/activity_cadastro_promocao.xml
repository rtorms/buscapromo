<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.CadastroPromocaoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/linearLayoutCadastroProdutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fotoCadPromocaoOnClick"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/fotoProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu_camera" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtCadCodBarProd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="Cod. Barras (click para scan)"
                    android:inputType="textCapWords"
                    android:onClick="edtCadCodBarProdOnClick" />

                <Button
                    android:id="@+id/btnFindCodBarDig"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableBottom="@android:drawable/ic_menu_search"
                    android:onClick="btnFindCodBarDigOnclick"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProduto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descrição do Produto"
                    android:textSize="15dp" />

                <!--<TextView-->
                <!--android:id="@+id/txtDescricaoProduto"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:text="Descrição Produto"-->
                <!--android:textSize="11dp" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/informarProdutoLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/txtMarcaInformada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Marca Produto"
                    android:textSize="11dp" />

                <EditText
                    android:id="@+id/txtDescricaoInformada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Descreva o Produto"
                    android:textSize="11dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <AutoCompleteTextView
                    android:id="@+id/actvSupermercado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Informe o local" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/btnDataInicial"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:drawableBottom="@android:drawable/ic_menu_my_calendar"
                        android:onClick="insereDataOnclick"
                        android:tag="dataIn" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="Data Inicio" />

                        <TextView
                            android:id="@+id/tvDataInicial"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnDataFinal"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:drawableBottom="@android:drawable/ic_menu_my_calendar"
                        android:onClick="insereDataOnclick"
                        android:tag="dataOut" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="Data Fim" />

                        <TextView
                            android:id="@+id/tvDataFinal"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="R$"
                        android:textColor="@android:color/holo_red_dark" />

                    <EditText
                        android:id="@+id/edtValorProdutoOriginal"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:hint="Original"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="R$"
                        android:textColor="@android:color/holo_red_dark" />

                    <EditText
                        android:id="@+id/edtValorProdutoPromocional"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:hint="Promocional"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBarPromocao"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminate="true"
                    android:visibility="gone" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtTeste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="teste"
                android:inputType="text" />

            <!--<View-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:layout_marginBottom="15dp"-->
            <!--android:focusable="false" />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSalvar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="SALVAR" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:onClick="btnCancelarOnclickListener"
                    android:text="CANCELAR" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

